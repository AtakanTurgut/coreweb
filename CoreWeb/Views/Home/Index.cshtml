@model HomePageViewModel
@{
    ViewData["Title"] = "Anasayfa";
}

<div id="myCarousel" class="carousel slide mb-6" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="0" class="" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="1" aria-label="Slide 2" class=""></button>
        <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="2" aria-label="Slide 3" class="active" aria-current="true"></button>
    </div>
    <div class="carousel-inner">
        @foreach (var item in Model.Sliders)
        {
            <div class="carousel-item @(item == Model.Sliders.FirstOrDefault() ? "active" : "") ">
                <img src="/Image/@item.Image" alt="@item.Name" />
                <div class="container">
                    <div class="carousel-caption text-start">
                        <h1>@item.Name</h1>
                        <p class="opacity-75">@item.Description</p>
                        <p><a class="btn btn-lg btn-primary" href="/@item.Link">İncele</a></p>
                    </div>
                </div>
            </div>
        }
    </div>

    <button class="carousel-control-prev" type="button" data-bs-target="#myCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#myCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>


<!-- Marketing messaging and featurettes
================================================== -->
<!-- Wrap the rest of the page in another container to center all the content. -->

<div class="container marketing mt-5">

    <!-- Three columns of text below the carousel -->
    <h2 class="text-center">Bizden Haberler</h2>
    <div class="row text-center">
        @foreach (var item in Model.News)
        {
            <div class="col-lg-4">
                <img src="/Image/@item.Image" alt="@item.Name" class="bd-placeholder-img rounded-circle" width="140" height="140" />
                <h2 class="fw-normal">@item.Name</h2>
                <p>@item.Content</p>
                <p><a class="btn btn-secondary" href="/News/Detail/@item.Id">Detayları Gör »</a></p>
            </div>
        }
    </div><!-- /.row -->
    <!-- START THE FEATURETTES -->
    <h2 class="text-center">Gönderiler</h2>
    @foreach (var item in Model.Posts)
    {
        <hr class="featurette-divider">

        <div class="row featurette">
            <div class="col-md-7">
                <h2 class="featurette-heading fw-normal lh-1"><span class="text-body-secondary">@item.Name</span></h2>
                <p class="lead">@item.Content</p>
            </div>
            <div class="col-md-5">
                <a href="/Post/Detail/@item.Id">
                    <img src="/Image/@item.Image" alt="@item.Name" class="bd-placeholder-img bd-placeholder-img-lg featurette-image img-fluid mx-auto" width="350" height="300" />
                </a>
            </div>
        </div>
    }

    <hr class="featurette-divider">

    <!-- /END THE FEATURETTES -->

</div><!-- /.container -->
